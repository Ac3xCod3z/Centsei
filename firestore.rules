
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a member of a calendar
    function isCalendarMember(calendarId) {
      return request.auth.uid in get(/databases/$(database)/documents/calendars/$(calendarId)).data.members;
    }
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Calendars can be read/written by their members
    match /calendars/{calendarId} {
      allow read, update, delete: if isCalendarMember(calendarId);
      allow create: if request.auth.uid == request.resource.data.ownerId;

      // Subcollections inherit the calendar's permissions
      match /{subcollection}/{docId} {
        allow read, write: if isCalendarMember(calendarId);
      }
    }
  }
}
